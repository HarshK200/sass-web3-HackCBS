generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// NOTE: the address here is the public web3 wallet address
model Uploader {
    id      String @id @default(uuid())
    address String @unique
}

model Worker {
    id      String @id @default(uuid())
    address String @unique
}

model Task {
    id    Int    @id @default(autoincrement())
    title String
}

model Options {
    id        Int    @id @default(autoincrement())
    image_url String?
}
